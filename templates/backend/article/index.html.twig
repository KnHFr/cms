{% extends '/backend/base_backend.html.twig' %}

{% block title %}Gestion des Articles{% endblock %}

{% block body %}

{{  render(controller('App\\Controller\\Backend\\MainController::navBackend'))}}

    <h1>Gestion des Articles</h1>

<div class="col-10 bg-secondary">
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Chemin de l'image</th>
                <th>Texte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.picturePath }}</td>
                <td>{{ article.text }}</td>
                <td>
                    <a href="{{ path('backend_article_show', {'id': article.id}) }}">voir</a>
                    <a href="{{ path('backend_article_edit', {'id': article.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_article_new') }}">Créer un nouvel Article</a>
{% endblock %}
